package shared

templ Base(title string, nav bool) {
	<!DOCTYPE html>
	<html
		class="dark"
		x-data="{ theme: $persist('dark').as('theme') }"
    x-bind:class="{ 'dark': theme === 'dark' }"
	>
		@head(title)
		<body class="antialiased">
			if nav {
				@navigation()
			}
			<main class="container py-4 min-h-screen flex">
				{ children... }
			</main>
		</body>
	</html>
}
